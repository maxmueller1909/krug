{% block javascripts %}

    {{ parent() }}

    <script>

        $(document).ready(function() {
            $('#contact_pain').change(function(){
                if($(this).val() == 1){
                    $('.pain_box').show();
                } else {
                    $('.pain_box').hide();
                }
            });
        });
    </script>
{% endblock %}

